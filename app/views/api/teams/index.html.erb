<div>
  <h3>Teams</h3>
  <table class="teams" style="width: 100%">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    <% @teams.each do |team| %>
    <tr class="team">
      <td><%= team.id %></td>
      <td><%= team.name %></td>
      <td>
        <%= link_to 'Details', api_team_path(team) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_api_team_path(team) %>
      </td>
      <td>
        <%= button_to 'Delete', api_team_path(team), method: :delete %>
      </td>
    </tr>
    <% end %>
  </table>
  <hr />
  <%= link_to "New Team", new_api_team_path %>
</div>

<style>
    td,
    th {
        text-align: left;
    }
</style>